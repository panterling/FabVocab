<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">






        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="ALL"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_filter"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="18sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_mydictionary_filters"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.16">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:id="@+id/lv_dictionary" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="34dp"
                android:id="@+id/alphabetLayout">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="D"
        android:layout_width="50dp"
        android:id="@+id/tv_scrolling_letter_overlay"
        android:layout_marginTop="600px"
        android:layout_marginLeft="730px"
        android:padding="0dp"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:textSize="10sp"
        android:visibility="gone"
        android:maxWidth="50dp"
        android:gravity="center"
        android:layout_height="25dp" />

</FrameLayout>